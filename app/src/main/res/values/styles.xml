<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/amazon_navy_dark</item>
        <item name="colorPrimaryVariant">@color/amazon_navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/amazon_orange</item>
        <item name="colorSecondaryVariant">@color/amazon_gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/amazon_light_bg</item>
    </style>

    <!-- AppBar overlay (for drawer / toolbar) -->
    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Popup menu overlay -->
    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- AmazonButton style (for ProductActivity buttons) -->
    <style name="AmazonButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/amazon_orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Toolbar title text style -->
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
